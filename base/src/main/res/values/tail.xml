<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--tail-->
    <style name="navi">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="navi.bottom">
        <item name="android:background">@drawable/navi_bottom_bg</item>
    </style>

    <style name="navi.top">
        <item name="android:background">@drawable/navi_top_bg</item>
    </style>

    <style name="navi_back">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingRight">@dimen/margin_activity</item>
        <item name="android:paddingLeft">@dimen/margin_activity</item>
        <item name="android:drawableLeft">@drawable/navi_back</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#062926</item>
        <item name="android:text">이전</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:onClick">onHeaderBack</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="navi_confirm">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">right|center_vertical</item>
        <item name="android:text">확인</item>
        <item name="android:layout_marginRight">@dimen/margin_activity</item>
        <item name="android:layout_marginStart">@dimen/margin_activity</item>
        <item name="android:textColor">@color/navi_confirm_text</item>
        <item name="android:background">@drawable/nani_confirm</item>
        <item name="android:textSize">@dimen/h3</item>
        <item name="backgroundTint">@color/navi_confirm_tint</item>
    </style>
</resources>
